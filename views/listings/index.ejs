<% layout("layouts/boilerplate")%>

    <h3>All Listings</h3>
    <!-- <form method="GET" action="/listings/new">
        <button>Create New</button>
    </form> -->
<div class="row row-cols-lg-4 row-cols-md-2 row-cols-sm-1 ">
     <% for(let listing of allListings) { %>
    <a href="listings/<%= listing._id %>" class="listing-link">
    <div class="card col listing-card" >
  <img src="<%= listing.image.url%>" class="card-img-top" alt="listing_img" style= "height: 20rem">
  <div class="card-img-overlay"></div>
  <div class="card-body">
    <p class="card-text">
      <b><%= listing.title %></b><br>
      <p>Owned by: <%= listing.owner ? listing.owner.username : "Unknown" %></p>
    <br>
     &#8377; <%= Number(listing.price).toLocaleString("en-IN") %>/night
    </p>
  </div>
  </div>
  <% } %>
</div>




